@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1" name="viewport">
    <meta content="upgrade-insecure-requests" http-equiv="Content-Security-Policy">
    <link href="./Images/hvk_logo.png" rel="shortcut icon" type="image/jpg" />
    <title>Owner Layout</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="~/Styles/site.css" rel="stylesheet" type="text/css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand HVKLogo" href="@Url.Action("Index", "Owner")" title="Return to Home Page">
            <img src="~/Images/hvk_logo.png" alt="Hvk Logo" class="headerLogo" width="30" height="30">
            <span class="headerTitle">Happy Valley Kennels</span>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    @Html.ActionLink("Home", "Index", "Owner", null, new { title = "Go to Home Page", @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Add Reservation", "Create", "Reservation", null, new { title = "Add a new reservation", @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Add Pet", "Create", "Pet", null, new { title = "Add a new Pet", @class = "nav-link" })
                </li>
            </ul>
            <span class="navbar-text" id="name"><img src="~/Images/person-circle.svg" alt="Person Icon" id="nameIcon" />Welcome @Context.Session.GetString("OwnerName")</span>
            @*Source: https://icons.getbootstrap.com/icons/person-circle/*@
            <a class="btn btn-danger NavBtns" href="@Url.Action("Index", "Home")">Logout</a>
        </div>
    </nav>

    <div id="container">
        <div id="content">
            @RenderBody()
        </div>
        <footer>
            <div id="footer-container">
                <div id="footerImage">
                    <img src="~/Images/hvk_logo.png" alt="Hvk Logo" id="FooterLogo" href="@Url.Action("Index", "Home")" title="Return to Home Page">
                </div>
                <div id="footer-nav">
                    <ul>
                        <li>@Html.ActionLink("Home", "Index", "Home", null, new { title = "Go to Home Page", @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Add Reservation", "Create", "Reservation", null, new { title = "Add a new reservation", @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Add Pet", "Create", "Pet", null, new { title = "Add a new Pet", @class = "nav-link" })</li>
                    </ul>
                </div>
                <div id="container-footer-information">
                    <div id="about">
                        <strong>About Us</strong>
                        <p id="aboutDescription">Happy Valley Kennels is a boarding Kennel for dogs, or is considered a doggy hotel</p>
                    </div>
                    <div id="contact">
                        <strong>Contact Us</strong>
                        <br />
                        <a href="mailto:info@happyvalleykennel.ca" class="contactIcons"><img src="~/Images/emailIcon.svg" alt="Email Icon" id="emailIcon" data-toggle="tooltip" data-placement="bottom" title="Email Us"></a>
                        <!--Source: https://freeicons.io/filter/popular/all/email?page=1-->
                        <a href="tel:819-123-4567" class="contactIcons"><img src="~/Images/phoneIcon.svg" alt="Phone Icon" id="phoneIcon" data-toggle="tooltip" data-placement="bottom" title="Call Us"></a>
                        <!--Source: https://freeicons.io/filter/popular/all/phone-->
                    </div>
                </div>
            </div>
            <hr>
            <p id="copyright">Copyright &copy; @DateTime.Now.Year Happy Valley Kennels. All rights reserved.</p>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="~/js/site.js">
    </script>
</body>
</html>