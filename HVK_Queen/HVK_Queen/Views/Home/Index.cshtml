@{
    Layout = "_LoginLayout";
}

@model HVK_Queen.Models.Login

<main id="loginMain">
    <h1 id="loginTitle">Login</h1>
    <div id="aroundLoginForm">
        <form asp-action="Index" asp-controller="Home" id="loginForm">
            <div class="summary-message">@ViewBag.ErrorMess</div>

            <div class="form-group" id="loginEmail">
                <label asp-for="EmailOrPhone">Username:</label>
                <input asp-for="EmailOrPhone" placeholder="Enter your email or phone number" class="form-control" />
                <span asp-validation-for="EmailOrPhone"></span>
            </div>

            <div class="form-group" id="loginPassword">
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" placeholder="enter your password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>

            <input type="submit" value="Login" class="btn btn-success" />
            <a href="@Url.Action("Create", "Owner")" data-toggle="tooltip" data-placement="bottom" title="Make an account with us" id="signUpLink">Sign up!</a>
        </form>
    </div>
</main>
